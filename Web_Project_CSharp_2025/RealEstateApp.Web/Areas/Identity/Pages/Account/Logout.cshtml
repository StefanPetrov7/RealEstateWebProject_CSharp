@page
@model RealEstateApp.Web.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card account-card shadow-sm">
            <div class="card-body">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-page="/Account/Logout" method="post">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Logout</button>
                        </div>
                    </form>
                }
                else
                {
                    <p>You have successfully logged out of the application.</p>
                }
            </div>
        </div>
    </div>
</div>

