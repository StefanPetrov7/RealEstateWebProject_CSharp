@using RealEstateApp.Web.ViewModels.Admin.Users

@model IEnumerable<UserManagementIndexViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Users</h2>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="ManageUsers" asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add New User
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col">User ID</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Roles.Any())
                        {
                            foreach (var role in user.Roles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-area="Admin" asp-controller="ManageUsers" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        @* Only show Delete/Restore if the user is NOT an Admin *@
                        @if (!user.Roles.Contains("Admin"))
                        {
                            if (user.IsDeleted)
                            {
                                <form asp-area="Admin" asp-controller="ManageUsers" asp-action="Restore" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-warning">
                                        <i class="bi bi-arrow-counterclockwise"></i> Restore
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-area="Admin" asp-controller="ManageUsers" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
