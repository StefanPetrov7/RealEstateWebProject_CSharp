@using RealEstateApp.Web.ViewModels.Admin.Reports
@model ReportsDashboardViewModel

<div class="container mt-4">
    <h2 class="mb-4">Reports Dashboard</h2>

    <!-- Snapshot Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm bg-light text-dark">
                <div class="card-body">
                    <h5 class="card-title">Property Status</h5>
                    <p class="mb-1"><strong>Active:</strong> @Model.Snapshot.ActiveCount</p>
                    <p class="mb-1"><strong>Deleted:</strong> @Model.Snapshot.DeletedCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Trend Section -->
    <h4 class="mb-3">Monthly Trend</h4>

    @if (Model.Trend != null && Model.Trend.Any())
    {
        <table class="table table-striped table-hover shadow-sm bg-light text-dark">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Added</th>
                    <th>Deleted</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Trend)
                {
                    <tr>
                        <td>@(new DateTime(item.Year, item.Month, 1).ToString("MMM yyyy"))</td>
                        <td>@item.AddedCount</td>
                        <td>@item.DeletedCount</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>Total</td>
                    <td>@Model.Trend.Sum(x => x.AddedCount)</td>
                    <td>@Model.Trend.Sum(x => x.DeletedCount)</td>
                </tr>
            </tfoot>
        </table>
    }
    else
    {
        <p class="text-muted">No trend data available.</p>
    }
</div>
