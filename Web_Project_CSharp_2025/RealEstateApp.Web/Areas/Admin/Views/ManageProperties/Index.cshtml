@model IEnumerable<RealEstateApp.Web.ViewModels.Property.PropertyViewModel>

<div class="container mt-4">
    <h2 class="mb-4">Manage Properties</h2>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="ManageProperties" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Property
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Building Type</th>
                <th>District</th>
                <th>Size</th>
                <th>Price</th>
                <th>Year</th>
                <th>Date Added</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in Model)
            {
                <tr>
                    <td>
                        @property.Name
                        @if (property.IsDeleted)
                        {
                            <span class="badge bg-danger ms-2">Deleted</span>
                        }
                    </td>
                    <td>@property.BuildingType</td>
                    <td>@property.DistrictName</td>
                    <td>@property.Size m²</td>
                    <td>@property.Price?.ToString("C")</td>
                    <td>@property.Year</td>
                    <td>@property.DateAdded.ToShortDateString()</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@property.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        @if (property.IsDeleted)
                        {
                            <form asp-action="Restore" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@property.Id" />
                                <button type="submit" class="btn btn-success btn-sm" title="Restore this property">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restore
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="SoftDelete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@property.Id" />
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this property?');"
                                        title="Soft delete this property">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
