@using RealEstateApp.Web.ViewModels.Favorite;
@model IEnumerable<FavoriteView>

@{
    ViewData["Title"] = "All Favorites";
}

<h2>Favorite Selection</h2>

<!-- Button to add a new tag -->
<a asp-action="Create" class="btn btn-success mb-4">Add new favorite list of properties.</a>

<div class="row">
    @foreach (var favorite in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/Images/Tags.jpg" class="card-img-top" alt="Cinema Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@favorite.Name</h5>
                    <a asp-action="Details" asp-route-id="@favorite.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
