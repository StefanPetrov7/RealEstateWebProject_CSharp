@using RealEstateApp.Web.ViewModels.Property;
@using RealEstateApp.Web.ViewModels.Favorite;

@model RealEstateApp.Web.ViewModels.Property.PropertyAddToFavoritesModel;

@{
    ViewData["Title"] = "Add Property to Favorite";
}

<h2>Add @Model.PropertyType to Favorites List</h2>

<form asp-action="AddToFavorites" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PropertyType" />
    <input type="hidden" asp-for="District" />
    <input type="hidden" asp-for="BuildingType" />
    <input type="hidden" asp-for="Size" />
 

    <h3>Select Favorites:</h3>

    <div class="form-group">
        @for (var i = 0; i < Model.Favorites.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model.Favorites[i].Id" />
                <input type="hidden" asp-for="@Model.Favorites[i].Name" />
                <input type="checkbox" asp-for="@Model.Favorites[i].IsSelected" class="form-check-input" />
                <label class="form-check-label">@Model.Favorites[i].Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Properties</a>