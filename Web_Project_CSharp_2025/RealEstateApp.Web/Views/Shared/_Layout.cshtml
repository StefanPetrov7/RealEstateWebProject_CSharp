@using static RealEstateApp.Common.AppConstants;

@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = AppReleaseYear == currentYear ? $"{AppReleaseYear}" : $"{AppReleaseYear} | {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] RealEstate</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />

    <!-- Project styles -->
    <link rel="stylesheet" href="~/RealEstateApp.Web.styles.css" asp-append-version="true" />

    <!-- Site overrides (must be last so dark theme wins) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar intentionally kept white -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building"></i> RealEstateApp
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="btn btn-primary nav-btn" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary nav-btn" asp-controller="Property" asp-action="Index">Properties</a>
                        </li>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary nav-btn" asp-controller="Favorite" asp-action="Index">Favorites</a>
                            </li>

                            @* Show Admin button only if user is in Admin role *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item ms-lg-3">
                                    <a class="btn btn-warning nav-btn text-dark"
                                       asp-area="Admin"
                                       asp-controller="Home"
                                       asp-action="Index">
                                        <i class="bi bi-shield-lock"></i> Admin
                                    </a>
                                </li>
                            }
                        }
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-primary nav-btn" asp-controller="Property" asp-action="Create">
                                <i class="bi bi-plus-lg"></i> Add Property
                            </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-4 flex-grow-1">
        <div class="container-xl">
            @RenderBody()
        </div>
    </main>

    <!-- Footer intentionally kept white -->
    <footer class="footer border-top py-4 bg-white">
        <div class="container d-flex justify-content-between align-items-center">
            <small class="text-secondary">© @footerNote RealEstate App</small>
            <div class="d-flex gap-3">
                <a class="text-secondary text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="text-secondary text-decoration-none" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
