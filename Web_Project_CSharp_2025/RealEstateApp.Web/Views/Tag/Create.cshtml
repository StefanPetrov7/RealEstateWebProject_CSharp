@using RealEstateApp.Web.ViewModels.Tag;
@model AddTagFormInputModel;

@{
    ViewData["Title"] = "Create Tag";
}

<h2>Add a New Cinema</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Importance" class="control-label"></label>
        <input asp-for="Importance" class="form-control" />
        <span asp-validation-for="Importance" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Add Tag</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}